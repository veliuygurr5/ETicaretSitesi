@using EntityLayer
@model List<Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<head>
    <link rel="stylesheet" href="/css/products.css"/>
</head>

<form method="post" action="/User/UserMainPage">
    <input type="text" name="filterUpperPrice" placeholder="Üst fiyatı giriniz" />
    <input type="text" name="filterLowerPrice" placeholder="Alt fiyatı giriniz" />
    <input type="text" name="filterText" placeholder="Arama kelimesi giriniz" />
    <select name="kategori">
        @foreach(var item in ViewBag.category)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>

    @* <label>Artan Sırala</label>
    <input type="radio" name="filterAsc" />

    <label>Azalan Sırala</label>
    <input type="radio" name="filterDesc" /> *@

    <select name="sıralama">
        <option>Fiyata Göre Artan Sırala</option>
        <option>Fiyata Göre Azalan Sırala</option>
    </select>

    <input type="submit" value="Filtrele" />
</form>

@{
  <div class="product-container">
       
            @foreach (var product in Model)
            {
            <div class="product-card">
                <div>@product.Image1</div>
                <div>@product.Title</div>
                <div>@product.Price</div>
                <a href="#">Detayları göster</a>
            </div>
            }
       
  </div>
}