@using EntityLayer
@model Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


@using (Html.BeginForm("UpdateProduct", "Seller", FormMethod.Post))
{
	@Html.HiddenFor(m=>m.ProductId)
	@Html.TextBoxFor(m => m.Title)
	@Html.TextBoxFor(m => m.Description)
	@Html.TextBoxFor(m => m.Price)
	@Html.DropDownListFor(m => m.Categoryid, new SelectList(ViewBag.categori, "Value", "Text"))
	@Html.TextBoxFor(m => m.Image1)
	@Html.TextBoxFor(m => m.Image2)
	@Html.TextBoxFor(m => m.Image3)
	@Html.TextBoxFor(m => m.Image4)
	@Html.TextBoxFor(m => m.Image5)
	<input type="submit" value="Ürünü Güncelle" />
}